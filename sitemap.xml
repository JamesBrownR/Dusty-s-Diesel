<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  
  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
  </url>

   <!-- About Page -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/about</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
  </url>
  
  <!-- Services Page -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/services</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
  </url>
  
  
   <!-- Remote Tuning Page -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/remote-tuning</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
  </url>
  
  <!-- Engine Programming Page -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/engines</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
  </url>
  
 

  
  <!-- Contact Page -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/contact</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
  </url>
  
  <!-- Blog Page -->
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}/blog</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
  </url>
  
  <!-- Blog Posts -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    {% if post.last_modified_at %}
    <lastmod>{{ post.last_modified_at | date_to_xmlschema }}</lastmod>
    {% else %}
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    {% endif %}
    <changefreq>monthly</changefreq>
  </url>
  {% endfor %}
  
</urlset>
